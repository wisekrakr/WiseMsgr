<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="end"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_me_constraint">


    <TextView
        android:id="@+id/tv_message_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/chat_from_bubble_shape"
        android:minWidth="225dp"
        android:padding="15dp"
        android:text="This is me"
        android:textAlignment="viewEnd"
        android:textColor="@color/light_gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.989"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date_chat_me"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:text="date"
        android:textAlignment="viewStart"
        android:textColor="@color/secondaryColor"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_message_chat"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_message_chat"
        app:layout_constraintTop_toTopOf="@+id/tv_message_chat"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_username_from_chat"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginEnd="15dp"
        android:text="Me"
        android:textAlignment="viewEnd"
        android:textColor="@color/secondaryColor"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_message_chat"
        app:layout_constraintEnd_toEndOf="@+id/tv_message_chat"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="@+id/tv_message_chat"
        app:layout_constraintTop_toTopOf="@+id/tv_message_chat"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>